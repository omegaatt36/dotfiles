{
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed",
    "context": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "assistant": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "language_models": {
    // this is an example of how to add a model
    // "openai": {
    //   "version": "1",
    //   "api_url": "https://api.x.ai/v1",
    //   "available_models": [
    //     {
    //       "provider": "x.ai",
    //       "name": "grok-beta",
    //       "display_name": "Grok (Beta)",
    //       "max_tokens": 128000
    //     }
    //   ]
    // },
    // https://ai.google.dev/gemini-api/docs/models/experimental-models
    "google": {
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini 2.0 Flash (Experimental)",
          "max_tokens": 1048576
        }
      ]
    }
  },
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "auto_fold_dirs": true,
  "show_edit_predictions": true,
  "base_keymap": "VSCode",
  "auto_update": true,
  "vim_mode": false,
  "ui_font_size": 18,
  "buffer_font_size": 18.0,
  // "buffer_font_family": "FiraCode Nerd Font",
  "font_family": ["FiraCode Nerd Font", "Iansui"],
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Hard",
    "dark": "Nord Omegaatt36 Blur"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "entry_spacing": "comfortable"
    // "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "terminal": {
    "font_size": 16,
    "font_family": "MesloLGS Nerd Font",
    "cursor_shape": "bar",
    "blinking": "on",
    "copy_on_select": true,
    "working_directory": "current_project_directory",
    // "env": {
    //   "EDITOR": "zed --wait"
    // },
    "line_height": "comfortable",
    "toolbar": {
      "title": false,
      "breadcrumbs": false
    }
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "autosave": "on_focus_change",
  "languages": {
    "Go": {
      "tab_size": 4,
      "format_on_save": "on",
      "language_servers": ["gopls", "golangci-lint"]
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": false,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "show_edit_predictions": false
    },
    "HTML": {
      "preferred_line_length": 240
    },
    "Markdown": {
      // turn off auto-complete AI assistance *in* the assistant panel
      // https://github.com/zed-industries/zed/discussions/13328
      "show_edit_predictions": false
    },
    "YAML": {
      "language_servers": ["yaml-language-server", "helm-ls"],
      "tab_size": 2
    },
    "Groovy": {
      "language_servers": []
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--disable-all",
          "--enable",
          "errcheck",
          "gosimple",
          "govet",
          "ineffassign",
          "staticcheck",
          "unused",
          "revive",
          "copyloopvar",
          "EXC0001",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true,
            "singleQuote": true,
            "bracketSpacing": false
          }
        }
      }
    },
    "ruff": {
      "initialization_options": {
        // https://docs.astral.sh/ruff/settings/
        "settings": {
          // "lineLength": 120,
          "lint": {
            // https://docs.astral.sh/ruff/rules/
            "extendSelect": ["F", "E", "W", "N"],
            "ignore": ["E501"]
          },
          "format": {
            "quoteStyle": "preserve"
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          // "diagnosticMode": "workspace",
          // "reportMissingTypeStubs": false,
          // "typeCheckingMode": "basic"
          "ignore": ["*"] // temporarily disable ALL of type checking
        },
        "python": {
          // $ uv venv --seed --python $(which python3) --directory="${HOME}/.local" venv
          "pythonPath": "~/.local/venv/bin/python"
        }
      }
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "context_servers": {
    // "calculator-go": {
    //   "command": {
    //     "path": "mcp-calculator-go",
    //     "args": [],
    //     "env": {}
    //   },
    //   "settings": {}
    // }
